<div class="audio-visualizer">
    <div class="audio-visualizer__controls u-ph u-pt--">
        <div class="layout">
            <div class="layout__item u-1/2">
                <div class="media">
                    <div class="media__img">
                        {{#unless isPlaying}}
                            <div class="audio-visualizer__icon controls__play" {{action 'play'}}>
                                <div class="vizaudio-play"></div>
                            </div>
                        {{else}}
                            <div class="audio-visualizer__icon controls__stop" {{action 'stop'}}>
                                <div class="vizaudio-pause"></div>
                            </div>
                        {{/unless}}
                    </div>
                    <div class="media__body overflow-visible">
                        {{sexy-select
                        selection=selectedSong
                        options=songs
                        valueProperty="path"
                        labelProperty="name"
                        defaultLabel="Select A Song"}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="audio-visualizer__viewer"></div>
</div>

